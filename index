    <script>
        // Show section function
        function showSection(index) {
            // Hide all sections
            document.querySelectorAll('.section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Show selected section
            document.getElementById('section-' + index).classList.add('active');
            
            // Update navigation
            document.querySelectorAll('.nav-step').forEach(step => {
                step.classList.remove('active');
            });
            document.querySelectorAll('.nav-step')[index].classList.add('active');
            
            // Scroll to top
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // Calculator function
        function calculateIncome() {
            const power = parseFloat(document.getElementById('power').value) || 100;
            const surplus = parseFloat(document.getElementById('surplus').value) || 40;
            const price = parseFloat(document.getElementById('price').value) || 3;
            
            // Calculate yearly production (average 4 hours peak sun per day)
            const yearlyProduction = power * 4 * 365 * (surplus / 100);
            const yearlyIncome = yearlyProduction * price;
            
            // Calculate ROI (assuming investment is 25% of SES cost, and SES costs 12000 per kW)
            const sessCost = power * 12000;
            const investmentCost = sessCost * 0.25;
            const roi = (yearlyIncome / investmentCost * 100).toFixed(0);
            const payback = (investmentCost / yearlyIncome).toFixed(1);
            
            // Update display
            document.getElementById('yearlyIncome').textContent = 
                new Intl.NumberFormat('uk-UA').format(Math.round(yearlyIncome)) + ' грн';
            document.getElementById('roi').textContent = roi + '%';
            document.getElementById('payback').textContent = payback + ' років';
        }

        // Schedule audit function
        function scheduleAudit() {
            alert('Дякуємо за інтерес! Зараз ми призначимо зустріч для обговорення деталей.');
        }

        // Keyboard navigation
        document.addEventListener('keydown', function(e) {
            const currentSection = Array.from(document.querySelectorAll('.section')).findIndex(s => s.classList.contains('active'));
            
            if (e.key === 'ArrowRight' && currentSection < 5) {
                showSection(currentSection + 1);
            } else if (e.key === 'ArrowLeft' && currentSection > 0) {
                showSection(currentSection - 1);
            }
        });

        // Initial calculation
        calculateIncome();
    </script>
</body>
</html>
